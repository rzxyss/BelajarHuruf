<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/rl_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAbjad"
            android:background="@drawable/button"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:text="Huruf Abjad"
            android:textAllCaps="false"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#ffff"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnHijaiyah"
            android:background="@drawable/button"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:text="Huruf Hijaiyah"
            android:textAllCaps="false"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_below="@id/btnAbjad"
            android:layout_marginTop="10dp"
            android:textColor="#ffff"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAngka"
            android:background="@drawable/button"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:text="Angka"
            android:textAllCaps="false"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_below="@id/btnHijaiyah"
            android:layout_marginTop="10dp"
            android:textColor="#ffff"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mau Belajar Apa Hari Ini?"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_above="@id/rl_btn"
        android:layout_marginBottom="70dp"/>

</RelativeLayout>